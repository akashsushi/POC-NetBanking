@model BankingApplication.WebApp.Models.AccountCreationVM

@{
    ViewData["Title"] = "CreateAccount";
}

<h1>CreateAccount</h1>
<hr />
@if (ViewData.ContainsKey("CreateAccount"))
{
    <div class="alert alert-info">

        <strong>@ViewData["CreateAccount"]</strong>

    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAccount" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tin" class="control-label"></label>
                <input asp-for="Tin" class="form-control" />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select id="AccountType" name="AccountType">
                    <option selected>Select</option>
                    <option value="saving">Saving</option>
                    <option value="current">Current</option>
                    <option value="corporate">Corporate</option>
                </select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IFSC" class="control-label"></label>
                <input asp-for="IFSC" class="form-control" />
                <span asp-validation-for="IFSC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

