@model BankingApplication.WebApp.Models.DeleteAccountVM

@{
    ViewData["Title"] = "DeleteAccount";
}

<h1>DeleteAccount</h1>
@if (ViewData.ContainsKey("DeleteACError"))
{
    <div class="alert alert-info">

        <strong>@ViewData["DeleteACError"]</strong>

    </div>
}
<hr />
<p>AccountNo:@ViewBag.AccountNo</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IsDelete" class="control-label"></label>
                <select id="IsDelete" name="IsDelete">
                    <option selected>Select Confirmation</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="IsDelete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

